# Environment Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://flowmind_user:flowmind_password@localhost:5432/flowmind_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TIMEZONE=UTC

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
GROK_API_KEY=your-grok-api-key-here
GROK_API_URL=https://api.x.ai/v1
AI_MODEL=grok-beta
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# External Service Integrations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# Notification Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.docx,.txt,.md,.csv,.xlsx

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
ALLOWED_HOSTS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# WebSocket
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Meeting Configuration
DEFAULT_MEETING_DURATION=30
MEETING_BUFFER_TIME=5

# Task Configuration
DEFAULT_TASK_PRIORITY=medium
AUTO_ARCHIVE_COMPLETED_TASKS_DAYS=30

# Productivity Analytics
PRODUCTIVITY_ANALYSIS_WINDOW_DAYS=30
FOCUS_SESSION_MIN_DURATION=25
